---
import '../css/base.css';
const offre = Astro.props;
---

<div class="max-w-sm rounded-lg overflow-hidden shadow-lg bg-white">
    <img src={offre.img} alt="/" class="w-full h-48 object-cover rounded-t-lg"/>
    <h2 class="text-xl font-semibold text-gray-800">{offre.nomMaison}</h2>
    <a href={`/offres/${offre.id}`}  class="mt-4 inline-block px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition">Voir plus</a>
</div>
